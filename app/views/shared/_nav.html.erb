<style type="text/css">
  .logo {
    border-radius: 10px;
  }
</style>

<div class="navbar-home navbar-fixed-top">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50, class: "logo" %>
  <% end %>
<!-- <div class="nav navbar-nav navbar-left"> -->
<!-- </div> -->

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag "http://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user-alt"></i> <%= t(".profile", default: "my Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to customers_path do %>
                <i class="fa fa-user-alt"></i> <%= t(".profile", default: "my customers") %>
              <% end %>
            </li>
            <li>
              <%= link_to bills_path do %>
                <i class="fa fa-money-bill"></i> <%= t(".settings", default: "my bills & income") %>
              <% end %>
            </li>
            <li>
              <%= link_to products_path do %>
                <i class="fa fa-warehouse"></i> <%= t(".settings", default: "my inventory") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to "Sign up", new_user_registration_path, class: "navbar-wagon-item navbar-home-link"%><div style="color: #eee">|</div>
      <%= link_to t(".sign_in", default: "Log in"), new_user_session_path, class: "navbar-wagon-item navbar-home-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user-alt"></i> <%= t(".profile", default: "my Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to customers_path do %>
                <i class="fa fa-user-alt"></i> <%= t(".profile", default: "my customers") %>
              <% end %>
            </li>
            <li>
              <%= link_to bills_path do %>
                <i class="fa fa-money-bill"></i> <%= t(".settings", default: "my bills & income") %>
              <% end %>
            </li>
            <li>
              <%= link_to products_path do %>
                <i class="fa fa-warehouse"></i> <%= t(".settings", default: "my warehouse") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
      </ul>
    </div>
  </div>
</div>

