<%= simple_form_for @product do |f| %>
  <h1>Update your product data</h1>
  <%= f.input :brand, label: "Product brand" %>
  <%= f.input :name, label: "Product name" %>
  <%= f.input :model, label: "Model" %>
  <%= f.input :category, label: "Category" %>
  <%= f.input :color, label: "Color/flavor" %>
  <%= f.input :purchase_price, label: "Purchase price($USD)", placeholder: '00.00' %>
  <%= f.input :wholesale_labeled_price, label: "Wholesael labeled price($USD})", placeholder: '00.00' %>
  <%= f.input :photo, label: "Upload an image for your product" %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, "Update date" %>
  <%= link_to "Cancel", :back %>
<% end %>
