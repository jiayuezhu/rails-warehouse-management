<%= simple_form_for [@bill, List.new(bill_id: @bill.id)] do |f| %>
  <h1>新的批发订单</h1>
  <%= f.input :buyer, label: "买家" %>
  <%= f.input :created_at, as: :date, :order => [:day, :month, :year], label: "交易日期" %>
  <%= f.hidden_field :bill_id, input_html: {value: @bill.id} %>
  <%= f.button :submit, "新建订单" %>
<% end %>
