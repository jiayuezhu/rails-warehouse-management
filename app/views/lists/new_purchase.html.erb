<%= simple_form_for [@bill, List.new(bill_id: @bill.id)] do |f| %>
  <h1>New Purchase List</h1>
  <%= f.association :buyer, collection: Buyer.where(is_buyer: false), label: "Supplier", prompt: "Choose a company" %>
  <%= f.input :created_at, as: :date, :order => [:day, :month, :year], label: "Order placed on" %>
  <%= f.hidden_field :bill_id, input_html: {value: @bill.id} %>
  <%= f.button :submit, "Create List" %>
  <%= link_to "Cancel", :back %>
<% end %>
<br>
